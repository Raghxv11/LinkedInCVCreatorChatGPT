{
  "manifest_version": 3,
  "name": "AI Cover Letter Generator for ASU",
  "version": "1.0.0",
  "description": "Generate personalized cover letters that are tailored to your resume and the job description in seconds.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://app.joinhandshake.com/*",
    "https://www.myworkday.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
